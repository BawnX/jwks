{
    "rootDir": "tests",
    "testEnvironment": "node",
    "moduleDirectories": [
        "node_modules",
        "src",
        "test"
    ],
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
        "**/*.(t|j)s"
    ],
    "bail": true,
    "verbose": true,
    "testTimeout": 30000,
    "slowTestThreshold": 10
}
